<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ViewController">
    <BorderPane prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
          <Label fx:id="presentationLabel" text="Insert a Directory path to search the matching Files" BorderPane.alignment="CENTER">
              <font>
                  <Font size="18.0" />
              </font>
          </Label>
        </top>
        <center>
            <FlowPane prefWrapLength="0.0" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets left="10.0" right="10.0" top="20.0" />
                </BorderPane.margin>
                <Label fx:id="pathLabel" text="Insert Path: ">
                    <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </FlowPane.margin>
                </Label>
                <TextField fx:id="pathField">
                    <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </FlowPane.margin>
                </TextField>
                <Label fx:id="maxDepthLabel" text="Insert Max Depth: ">
                    <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </FlowPane.margin>
                </Label>
                <Spinner fx:id="maxDepthSpinner" initialValue="0" max="1000" min="0">
                    <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </FlowPane.margin>
                </Spinner>
            </FlowPane>
        </center>
        <bottom>
            <BorderPane>
                <top>
                    <AnchorPane>
                        <FlowPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <Label text="Select Exercise to run: ">
                        <FlowPane.margin>
                           <Insets left="20.0" />
                        </FlowPane.margin>
                     </Label>
                            <ComboBox fx:id="comboExercise">
                        <FlowPane.margin>
                           <Insets left="10.0" right="40.0" />
                        </FlowPane.margin></ComboBox>
                            <Button fx:id="buttonSearch" mnemonicParsing="false" prefHeight="39.0" prefWidth="314.0" text="SEARCH">
                                <font>
                                    <Font size="18.0" />
                                </font>
                            </Button>
                        </FlowPane>
                        <BorderPane.margin>
                            <Insets bottom="30.0" left="10.0" right="10.0" />
                        </BorderPane.margin>
                    </AnchorPane>
                </top>
                <center>
                    <BorderPane>
                        <top>
                            <Label fx:id="listPresentation" text="List of matching files:" BorderPane.alignment="TOP_CENTER">
                                <font>
                                   <Font name="System Bold" size="14.0" />
                                </font>
                            </Label>
                        </top>
                        <center>
                            <ListView fx:id="filesListView" BorderPane.alignment="CENTER" />
                        </center>
                    </BorderPane>
                </center>
                <bottom>
                    <BorderPane>
                        <left>
                            <FlowPane prefWidth="300" prefWrapLength="0.0" BorderPane.alignment="CENTER_LEFT">
                                <Label text="Files with at least one match:">
                                    <FlowPane.margin>
                                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                                    </FlowPane.margin>
                                </Label>
                                <Label fx:id="filesPercentageLabel" text="0.0%">
                                    <FlowPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </FlowPane.margin>
                                </Label>
                            </FlowPane>
                        </left>
                        <right>
                            <FlowPane nodeOrientation="RIGHT_TO_LEFT" prefWidth="300" prefWrapLength="0.0" BorderPane.alignment="CENTER_RIGHT">
                                <Label fx:id="meanNumberOfMatchesLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="0">
                                    <FlowPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
                                    </FlowPane.margin>
                                </Label>
                                <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Mean number of matches:">
                                    <FlowPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </FlowPane.margin>
                                </Label>
                            </FlowPane>
                        </right>
                    </BorderPane>

                </bottom>
            </BorderPane>
        </bottom>
    </BorderPane>
</AnchorPane>
