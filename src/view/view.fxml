<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ViewController">
    <BorderPane prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
          <Label fx:id="presentationLabel" text="Insert a Directory path to search the matching Files" BorderPane.alignment="CENTER">
              <font>
                  <Font size="18.0" />
              </font>
          </Label>
        </top>
        <center>
            <BorderPane>
                <top>
                    <FlowPane prefWrapLength="0.0" BorderPane.alignment="CENTER">
                        <BorderPane.margin>
                            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
                        </BorderPane.margin>
                        <Label fx:id="pathLabel" text="Insert Path: ">
                            <FlowPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="pathField">
                            <FlowPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </FlowPane.margin>
                        </TextField>
                        <Label fx:id="maxDepthLabel" text="Insert Max Depth: ">
                            <FlowPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="maxDepthField" text="0">
                            <FlowPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </FlowPane.margin>
                        </TextField>
                    </FlowPane>
                </top>
            <center>
                <BorderPane>
                    <top>
                        <Label text="List of matching files:" BorderPane.alignment="TOP_CENTER">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font></Label>
                    </top>
                    <center>
                        <AnchorPane>
                            <ScrollPane fx:id="scrollPaneForListView" fitToHeight="true" fitToWidth="true" hbarPolicy="ALWAYS" vbarPolicy="ALWAYS" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <ListView fx:id="filesListView" BorderPane.alignment="CENTER" />
                            </ScrollPane>
                        </AnchorPane>
                    </center>
                </BorderPane>
            </center>
            <bottom>
                <BorderPane>
                    <left>
                        <FlowPane prefWidth="300" prefWrapLength="0.0" BorderPane.alignment="CENTER_LEFT">
                            <Label text="Files with at least one match:">
                                <FlowPane.margin>
                                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                                </FlowPane.margin>
                            </Label>
                            <Label fx:id="filesPercentage" text="\%">
                                <FlowPane.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </FlowPane.margin>
                            </Label>
                        </FlowPane>
                    </left>
                    <right>
                        <FlowPane nodeOrientation="RIGHT_TO_LEFT" prefWidth="300" prefWrapLength="0.0" BorderPane.alignment="CENTER_RIGHT">
                            <Label fx:id="meanNumberOfMatches" alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="0">
                                <FlowPane.margin>
                                    <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                                </FlowPane.margin>
                                </Label>
                            <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Mean number of matches:">
                                <FlowPane.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </FlowPane.margin>
                            </Label>
                        </FlowPane>
                    </right>
                </BorderPane>

            </bottom>
            </BorderPane>
        </center>
        <bottom>
            <AnchorPane>
                <Button fx:id="buttonSearch" mnemonicParsing="false" text="SEARCH" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Button>
                <BorderPane.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </BorderPane.margin>
            </AnchorPane>
        </bottom>
    </BorderPane>
</AnchorPane>
